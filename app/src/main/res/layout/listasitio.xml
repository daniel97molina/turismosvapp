<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <TextView
        android:id="@+id/txtDescripcionSitio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtTituloSitio"
        android:layout_alignStart="@+id/txtTituloSitio"
        android:layout_below="@+id/txtTituloSitio"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_x="81dp"
        android:layout_y="44dp"
        android:text="Texto Frase"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgSitio"
        app:layout_constraintTop_toBottomOf="@+id/txtTituloSitio" />

    <TextView
        android:id="@+id/txtTituloSitio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:layout_x="81dp"
        android:layout_y="11dp"
        android:text="Titulo Frase"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgSitio"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgSitio"
        android:layout_width="67dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/txtDescripcionSitio"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_toLeftOf="@+id/txtDescripcionSitio"
        android:layout_toStartOf="@+id/txtDescripcionSitio"
        android:layout_x="7dp"
        android:layout_y="0dp"
        android:cropToPadding="false"
        android:maxHeight="35dp"
        android:maxWidth="74dp"
        android:src="@android:drawable/ic_dialog_map"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>


