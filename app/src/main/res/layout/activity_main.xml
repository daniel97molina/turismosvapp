<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fillViewport="true">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="uesocc.ipam2018.aplicacionturismo.MainActivity">

    <EditText
        android:id="@+id/inputText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text" />

    <Button
        android:id="@+id/btnBuscarSitio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar sitio" />

    <Button
        android:id="@+id/btnBuscarCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar categoria" />

    <Button
        android:id="@+id/btnFindByNameLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar por nombre" />

    <Button
        android:id="@+id/btnFindByLatitudLongitud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar por latitud y longitud" />

    <TextView
        android:id="@+id/idSitio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="idSitio" />

    <TextView
        android:id="@+id/nombreSitio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nombreSitio" />

    <TextView
        android:id="@+id/latitudSitio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="latitudSitio" />

    <TextView
        android:id="@+id/longitudSitio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="longitudSitio" />

    <TextView
        android:id="@+id/categoriaSitio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="idCategoria" />

    <TextView
        android:id="@+id/descripcionSitio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="descripcionSitio" />

    <ImageView
        android:id="@+id/imagenSitio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@mipmap/ic_launcher" />


</LinearLayout>
</ScrollView>
